<script type="module">
  const urlApi = "https://jewelryfashionoficial.com/wp-json/wp/v2/pages";

  function getPageAboutUs() {
    fetch(urlApi)
      .then((response) => response.json())
      .then((data) => {
        const pageAboutUs = data.find((page) => page.slug === "quienes-somos");
        if (pageAboutUs) {
          document.getElementById("title-about-us").innerHTML =
            pageAboutUs.title.rendered;
        }
      })
      .catch((error) => {
        console.error("Error fetching About Us page:", error);
      });
  }

  getPageAboutUs();

</script>

