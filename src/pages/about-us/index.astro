---
title: "About Us"
layout: "../../layouts/BaseLayout.astro"
import '../../styles/global.css';
---
<div>

  <h1 class="text-3xl font-bold underline" id="title-about-us"></h1>
</div>


<script type="module">
  debugger;
  const urlApi = "https://jewelryfashionoficial.com/wp-json/wp/v2/pages";

  function getPageAboutUs() {
    fetch(urlApi)
      .then((response) => response.json())
      .then((data) => {
        const pageAboutUs = data.find(
          (page) => page.slug === "quienes-somos"
        );
        if (pageAboutUs) {
          document.getElementById("title-about-us").innerHTML =
            pageAboutUs.title.rendered;
        }
      })
      .catch((error) => {
        console.error("Error fetching About Us page:", error);
      });
  }

  getPageAboutUs();

  console.log("Welcome to the About Us page!");
</script>