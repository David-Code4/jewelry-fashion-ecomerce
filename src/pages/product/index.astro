<script>
  const urlApi = "https://admin.jewelryfashionoficial.com/wp-json/custom-api/v1/api-json/v1/product_exists/";

  const checkProductExists = async (productName) => {
    try {
      const response = await fetch(`${urlApi}/${productName}`);
