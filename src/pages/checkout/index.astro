import BaseLayout from "../../layouts/Layout.astro";
---

<BaseLayout>
  <main class="flex-grow px-4 pb-12">
    <h2
      class="text-text-light text-3xl font-bold tracking-tight text-left pt-6 pb-8"
    >
      <main class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8 mt-10">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <section class="lg:col-span-2">
            <h2 class="text-2xl font-bold">Checkout</h2>
            <div id="cart-list" class="mt-6 bg-white rounded-lg shadow-sm p-6">
              <div id="cart-items" class="space-y-4">
                <p class="text-gray-600">Cargando carrito...</p>
              </div>
            </div>
          </section>
          <aside class="lg:col-span-1">
            <h3 class="text-lg font-semibold">Resumen</h3>
            <div class="mt-4 bg-white rounded-lg shadow-sm p-6">
              <p class="text-gray-600">Total: <strong id="cart-total">$0</strong></p>
              <button id="checkout-clear" class="mt-4 w-full rounded bg-red-500 text-white py-2">Vaciar carrito</button>
            </div>
          </aside>
        </div>
      </main>

      <script>
        (function(){
          const fmt = v => Number(v||0).toFixed(2);
          const elItems = document.getElementById('cart-items');
          const elTotal = document.getElementById('cart-total');
          const clearBtn = document.getElementById('checkout-clear');

          function render(){
            if(!(window.cartApi && typeof window.cartApi.getCart === 'function')){
              elItems.innerHTML = '<p class="text-red-500">Carrito no disponible.</p>';
              return;
            }
            const items = window.cartApi.getCart();
            if(!items || items.length === 0){
              elItems.innerHTML = '<p class="text-gray-600">Tu carrito está vacío.</p>';
              elTotal.textContent = '$0.00';
              return;
            }
            elItems.innerHTML = '';
            let total = 0;
            items.forEach(item => {
              const row = document.createElement('div');
              row.className = 'flex items-center gap-4';
              const img = document.createElement('img');
              img.src = item.image || '/assets/placeholder.png';
              img.alt = item.name || '';
              img.width = 64; img.height = 64;
              img.className = 'rounded';
              const info = document.createElement('div');
              info.className = 'flex-1';
              info.innerHTML = `<div class="font-semibold">${item.name}</div>
                <div class="text-sm text-gray-600">$${fmt(item.price)} x <input data-id="${item.id}" class="w-12 border rounded px-1 qty-input" value="${item.quantity}" /></div>`;
              const remove = document.createElement('button');
              remove.className = 'ml-4 text-sm text-red-600';
              remove.textContent = 'Eliminar';
              remove.addEventListener('click', ()=>{ window.cartApi.removeItem(item.id); });
              row.appendChild(img);
              row.appendChild(info);
              row.appendChild(remove);
              elItems.appendChild(row);
              total += (Number(item.price||0) * Number(item.quantity||0));
            });
            elTotal.textContent = '$' + fmt(total);

            // attach qty listeners
            document.querySelectorAll('.qty-input').forEach(input => {
              input.addEventListener('change', (e)=>{
                const id = input.getAttribute('data-id');
                const v = Number(input.value || 0);
                if(v <= 0){ window.cartApi.removeItem(id); return; }
                window.cartApi.updateQty(id, v);
              });
            });
          }

          if(clearBtn) clearBtn.addEventListener('click', ()=>{ window.cartApi.clearCart(); });

          window.addEventListener('cartchange', ()=> render());
          // initial render (in case cartApi already loaded)
          setTimeout(()=> render(), 100);
        })();
      </script>
