---
import logo from "../assets/logo1.jpg";
import background from "../assets/background.svg";
---

<div id="container">
  <img id="background" src={background.src} alt="" fetchpriority="high" />
  <main class="flex flex-col justify-center min-h-screen">
    <section id="hero">
      <div class="b-1 rounded-2xl relative h-72 overflow-hidden shadow-lg shadow-amber-500/50">
        <img
          class="w-full h-full border-radius: 50%"
          src={logo.src}
          width="115"
          height="48"
          alt="Astro Homepage"
        />
      </div>
      <h1 class="p-10 text-amber-50 font-extraboldn text-5xl">
        Llegaremos pronto...
      </h1>
    </section>
  </main>
</div>

<style>
  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-color: #000;
    object-fit: cover;
  }

  #container {
    font-family: Inter, Roboto, "Helvetica Neue", "Arial Nova", "Nimbus Sans",
      Arial, sans-serif;
    height: 100%;
  }

  #hero {
    display: grid;
    align-items: center;
    flex-direction: column;
    justify-items: center;
    padding: 16px;
  }
</style>
